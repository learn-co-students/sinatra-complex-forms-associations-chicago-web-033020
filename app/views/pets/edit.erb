<h1>Update Pet</h1>

<h2>Edit Info For <%= @pet.name %></h2>

<form action='/pets/<%= @pet.id %>' method='POST'>
    <input id='hidden' type='hidden' name='_method' value='patch'>
    <label>Edit Pet Name:</label>
    <input type='text' name='pet[name]' id='pet_name' value='<%= @pet.name %>'><br>
   
    <p>Select existing owner... or make new one!</p>
   
    <h3>Existing Owners</h3>
    <% Owner.all.each do |owner| %>
        <input type='radio' name='pet[owner_id]' id='<%= owner.id %>' value='<%= owner.id %>' <%='checked' if @pet.owner == owner %>>
        <%= owner.name %></input><br>
    <% end %>
    
    <h3>New Owner</h3>
    <label>Owner Name:</label>
    
    <input type='text' name='owner[name]' id='owner_name'></input><br>
    <input type='submit' value='Update Pet'>
</form>